{
	"compilerOptions": {
		"target": "ES2022",
		"moduleResolution": "Node",
		"module": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.config.*", "dist/**/*"]
}
